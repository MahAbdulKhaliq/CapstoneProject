@model WorkoutRepository.Models.Exercise

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PositiveRatings" />
            <input type="hidden" asp-for="NegativeRatings" />
            <div class="form-group">
                <label asp-for="MuscleGroup" class="control-label"></label>
                <select asp-for="MuscleGroupId" class="form-control" asp-items="ViewBag.MuscleGroupId"></select>
                <span asp-validation-for="MuscleGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryEquipment" class="control-label"></label>
                <select asp-for="PrimaryEquipmentId" class="form-control" asp-items="ViewBag.PrimaryEquipmentId"></select>
                <span asp-validation-for="PrimaryEquipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageResource" class="control-label"></label>
                <input type="hidden" asp-for="ImageResource" class="form-control" />
                <span asp-validation-for="ImageResource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Current Image</label>
                <img src="~/images/@Model.ImageResource" class="card-img-top" style="width:300px" />
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmbedLink" class="control-label"></label>
                <input asp-for="EmbedLink" class="form-control" />
                <span asp-validation-for="EmbedLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
